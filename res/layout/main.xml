<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/"
  	android:id="@+id/vehicle_view"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <TableLayout
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:stretchColumns="1,3"
      android:background="#dddddd">
      <TableRow
      	android:layout_margin="2dip"
        android:background="#000000">
        <ImageView
          android:src="@drawable/mpg"
          android:layout_gravity="top|left"/>
      	<TextView
      	  android:text="0"
      	  android:id="@+id/avg_fuel_econ_text"
      	  android:textSize="115px"
      	  android:gravity="bottom|right"/>
      	<TextView
      	  android:text="mpg"
      	  android:id="@+id/avg_fuel_econ_lbl"
      	  android:gravity="bottom|left"/>
      	<TextView
      	  android:id="@+id/compass_text"
      	  android:text="N"
      	  android:gravity="center"
      	  android:layout_marginRight="10px"
      	  android:textSize="115px"/>
      </TableRow>
    </TableLayout>
    <TableLayout
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:background="#dddddd">
      <TableRow
      	android:layout_margin="2dip"
        android:background="#000000">
        <awis.obd.drawable.CoolantGaugeView
          android:layout_width="330px"
          android:id="@+id/coolant_gauge"
		  android:layout_height="50px"
		  android:layout_margin="7px"/>
		<ImageView
		  android:src="@drawable/temp"
		  android:layout_width="wrap_content"
		  android:layout_height="wrap_content"
		  android:layout_gravity="center_vertical|center_horizontal"
		  android:paddingLeft="10px"/>
		<TextView
      	  android:id="@+id/air_temp_text"
      	  android:text=""
      	  android:layout_marginLeft="15px"
      	  android:layout_gravity="center_vertical|center_horizontal"/>
	  </TableRow>
	  <!--
	  <TableRow
      	android:layout_margin="2dip"
        android:background="#000000">
        <TextView
          android:id="@+id/accel_text"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"/>
		<awis.obd.drawable.AccelGaugeView
		  android:id="@+id/accel_gauge"
		  android:layout_width="330px"
		  android:layout_height="50px"
		  android:layout_margin="7px"/>
      </TableRow>
      -->
    </TableLayout>
    <TableLayout
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:stretchColumns="*"
      android:background="#dddddd">
      <TableRow
      	android:layout_margin="2dip"
        android:background="#000000">
      	<TextView
      	  android:id="@+id/inst_fuel_econ_text"
      	  android:text="0 mpg"/>
      	<TextView
      	  android:id="@+id/run_time_text"
      	  android:text="00:00:00"/>
      	<TextView
      	  android:id="@+id/avg_rpm_text"
      	  android:text="0000 RPM"/>
      	<TextView
      	  android:id="@+id/avg_spd_text"
      	  android:text="0 mph"/>
      </TableRow>
    </TableLayout>
	<ScrollView
	  android:id="@+id/data_scroll"
	  android:layout_width="fill_parent"
	  android:layout_height="wrap_content">
		<TableLayout
		  android:id="@+id/data_table"
		  android:layout_width="fill_parent"
		  android:layout_height="fill_parent"
		  android:stretchColumns="*"
		  android:background="#dddddd">
		</TableLayout>
	</ScrollView>            
</LinearLayout>